---
import Section from "@/components/Section.astro";
import { skills } from "@cv";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name, keywords }) => {
        return (
          <li>
            <h5>{name}</h5>
            <article>
              <ul>
                {keywords.map((keyword) => (
                  <li>{keyword}</li>
                ))}
              </ul>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
  }
  li {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    margin: 4px;
  }
  article {
    display: flex;
    flex-direction: column;
    font-size: 0.8rem;
    border: solid 1px #ddd;
    padding: 4px;
    border-radius: 6px;
  }
</style>
