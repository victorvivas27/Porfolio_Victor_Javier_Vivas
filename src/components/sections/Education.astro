---
import Section from "../Section.astro"

import { education } from "@cv"
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area,studyType }) => {
      // Formatear fecha en "MMM. YYYY"
const formatDate = (date: string | number | Date) =>
    new Date(date).toLocaleDateString("es-ES", { year: "numeric", month: "short" })
        .replace(".", ""); // Opcional: eliminar el punto final en algunos formatos

          const startFormatted = formatDate(startDate);
          const endFormatted = endDate ? formatDate(endDate) : "Actual";

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>

                <time class="time">{startFormatted} - {endFormatted}</time>
              </header>

              <footer>
                <p>{area}</p>
                <p>{studyType}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  .time {
    color: #555;
   }

  @media (width <= 700px) {
    .time {
      text-align: right;
      font-size: 0.8em;
    }
  }
</style>